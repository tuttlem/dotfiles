general {
colors = true
color_good = "#BBBBBB"
color_bad = "#CC1616"
color_degraded = "#55858E"
interval = 2
}

order += "load"
order += "cpu_usage"
order += "disk /"
order += "ethernet enp3s0"
#order += "wireless wlp0s20f0u2"
order += "tztime local"
#order += "volume master"
#order += "battery 0"
#order += "   "
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"

volume master {
format = " ♪: %volume "
device = "default"
mixer = "Master"
mixer_idx = 0
}

load {
format = " Σ: %1min "
}

cpu_usage {
format = " λ: %usage "
}

disk "/" {
format = " / %avail "
}

wireless wlp0s20f0u2 {
format_up = " W:%quality on %essid (%ip) "
format_down = " W: DOWN "
}

ethernet enp3s0 {
format_up =  "­ %ip "
format_down = " Ð enp3s0 "
}

run_watch DHCP {
pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
pidfile = "/var/run/vpnc/pid"
}

tztime local {
format = " %h-%d %H:%M "
}

battery 0 {
        format = " B: %percentage "
        low_threshold = 30
        threshold_type = percentage
        integer_battery_capacity = true
        color_good = "#0000FF"
}

